# Test Environment Configuration
NODE_ENV=test
PORT=3001
HOSTNAME=127.0.0.1
BASE_URL=http://localhost:3001
LOG_LEVEL=error

# Security & Authentication (REQUIRED)
JWT_SECRET=test_jwt_secret_minimum_32_characters_required_for_testing

# Database (REQUIRED) - Use separate test database
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres

# Redis (REQUIRED) - Use separate test Redis instance
REDIS_URL=redis://localhost:6379/1

# Rate Limiting (Optional)
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=1000

# CORS (Optional)
CORS_ORIGIN=*

# AWS Configuration (REQUIRED) - Use mock values for testing
AWS_ACCESS_KEY_ID=test_access_key
