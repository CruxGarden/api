# Application Configuration
NODE_ENV=development
PORT=3000
HOSTNAME=127.0.0.1
BASE_URL=http://localhost:3000
LOG_LEVEL=debug

# Security & Authentication (REQUIRED)
# Must be at least 32 characters
JWT_SECRET=<jwt_secret_min_32_characters>

# Database (REQUIRED)
# PostgreSQL connection URL
DATABASE_URL=postgresql://cruxgarden:cruxgarden_dev_password@127.0.0.1:5432/cruxgarden

# Database Connection Pool (Optional)
# Minimum connections in pool (default: 2)
DB_POOL_MIN=2
# Maximum connections in pool (default: 10)
DB_POOL_MAX=10
# Idle connection timeout in ms (default: 30000)
DB_POOL_IDLE_TIMEOUT=30000
# Connection acquire timeout in ms (default: 60000)
DB_POOL_ACQUIRE_TIMEOUT=60000

# Redis (REQUIRED)
# Redis connection URL for caching and sessions
REDIS_URL=redis://localhost:6379

# Rate Limiting (Optional)
# Time window in milliseconds (default: 60000 = 1 minute)
RATE_LIMIT_TTL=60000
# Max requests per time window (default: 100)
RATE_LIMIT_MAX=100

# CORS (Optional)
# Allowed origins (default: * for all origins)
# For production, set specific origins: https://example.com,https://app.example.com
CORS_ORIGIN=*

# AWS Configuration (REQUIRED)
AWS_ACCESS_KEY_ID=<aws_access_key_id>
AWS_SECRET_ACCESS_KEY=<aws_secret_access_key>
AWS_REGION=<aws_region>
# AWS SES (Simple Email Service)
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
# AWS S3 (Simple Storage Service)
AWS_S3_ATTACHMENTS_BUCKET=crux-garden-attachments
